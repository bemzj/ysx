/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 188rpx;
  height: 188rpx;
  margin: 38rpx 0rpx 12rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 10rpx solid rgba(255, 255, 255, 0.1);
}
.userinfo button{
  margin: 130rpx 0 85rpx;
}
.userinfo-nickname {
  color: #ffffff;
  font-size: 36rpx;
}
.wxSrc{
  width:100%;
  height: 505rpx;
  background: linear-gradient(to bottom , #26ccfa , #5b91ff); /* 标准的语法 */
}
page{
  height: 100%;
  background-color: #efeff4;
}
.card{
  font-size: 32rpx;
  width:89.33%;  
  margin: 0 auto;
  margin-top: 40rpx; 
  position: relative;
}
.cardBox{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.cardBox .companyName{
  position: absolute;
  top: 65rpx;
  font-size: 28rpx;
  color: #c9ccd2;
  right: 50rpx;
}
.card image{
  width: 100%;
}
.cardBox .message{
  color: #c9ccd2;
  font-size: 36rpx;
  padding: 106rpx 0rpx 0rpx 44rpx;
}
.message .name{
  font-size: 36rpx;
  display: block;
  margin-bottom: 35rpx;
}
.message .mBox{
  height: 38rpx;
  margin: 5px 0;
  padding-left: 38rpx;
  position: relative;
}
.message .mBox view{
  margin: 9rpx 0; 
  width: 160rpx;
  height: 20rpx;
  background: #e1e4e9;
  position: relative;
}
.message .mBox view.has{
  margin: 0px;
  height: 38rpx;
  line-height: 38rpx;
  background: transparent;
  font-size: 26rpx;
  width:92% !important;
}
.message .mBox view text{
  color:#509dfe;
  position: absolute;
  top: 50%;
  margin-top: -19rpx;
  font-size: 24rpx;
  display: block;
  left: -34rpx;
  line-height: 38rpx;
}
.message .mBox.email view text{
  left: -36rpx;
}
.message .mBox.email view{
  width: 220rpx;
}
.message .mBox.address view{
  width: 300rpx;
}
.create{
  border: 6rpx solid rgba(63,140,244,0.1);
  width: 412rpx;
  height: 102rpx;
  border-radius: 45rpx;
  margin: 48rpx auto 0;
}
.create button{
    width: 100%;
    height: 100%;
    border-radius: 45rpx;
    background-color: #3f8cf4;   
    color: white;
    font-size: 30rpx;
    line-height: 90rpx;
}