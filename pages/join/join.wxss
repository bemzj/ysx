/* pages/join/join.wxss */
.searchBox {
    height: 100rpx;
    border: 1px solid #c8c8c8;
    border-radius: 8rpx;
    margin-top: 20rpx;
    position: relative;
}
.searchBox input {
    width: 90%;
    margin-left: 4%;
    display: block;
    height: 100rpx;
    border: 0;
    color: #333333;
    font-size: 30rpx;
}
.searchBox view {
    position: absolute;
    /* display: none; */
    top: 0;
    right: 110rpx;
    width: 40rpx;
    height: 100rpx;
    background: url('http://www.hengdikeji.com/home/img/companyClose.png') no-repeat center center;
    background-size: 80%;
}
.searchBox button {
    position: absolute;
    top: 0;
    right: 0;
    width: 100rpx;
    height: 100rpx;
    border: none;
    outline: 0;
    display: block;
    background: url("http://www.hengdikeji.com/home/img/join02.png") no-repeat center center;
    background-size: 47rpx;
    background-color: transparent;
}
.searchBox button::after{
  border: none;
}
.jobList .jobChild {
    border-bottom: 1px solid #e4e4e4;
    padding: 35rpx 0;
    display: block;
    position: relative;
}
.jobList .jobChild .jobLeft {
    width: 80%;
}
.jobList .jobChild .jobLeft view:nth-child(1) {
    font-size: 30rpx;
    color: #333333;
    line-height: 45rpx;
    font-weight: bold;
}
.jobList .jobChild .jobLeft view:nth-child(1) text{
    padding-left: 54rpx;
    background: url("http://www.hengdikeji.com/home/img/join03.png") no-repeat 20rpx center;
    background-size: 22rpx auto;
}
.jobList .jobChild .jobLeft view:nth-child(2) {
    font-size: 24rpx;
    line-height: 45rpx;
    color: #555555;
}
.jobList .jobChild .jobLeft view:nth-child(2) text {
    padding-left: 54rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.jobList .jobChild .jobRight {
    position: absolute;
    right: 20rpx;
    top: 50%;
    margin-top: -20rpx;
}
.jobList .jobChild .jobRight text {
  display: block;
    width: 100rpx;
    height: 40rpx;
    border-radius: 20rpx;
    color: #888888;
    font-size: 20rpx;
    line-height: 40rpx;
    border-radius: 20rpx;
    text-align: center;
    border: 1px solid #c8c8c8;
}
.jobList .jobChild:nth-child(1) {
    border-top: 1px solid #e4e4e4;
}
.jobList {
    margin-top: 40rpx;
    padding-bottom: 50rpx;
}
#join {
    padding: 0 0;
}
.noJoin{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  display: -webkit-flex;
  -webkit-align-items: center;
  -webkit-justify-content: center;
  -webkit-flex-direction: column;
  height: 600rpx;
}